<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.yepwarriors.yepwarriors" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".YepApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Establecemos las actividades que componen nuestra aplicaci칩n para que puedan ser llamadas -->
        <activity
            android:name=".MainActivityTabbed"
            android:label="@string/app_name" >

            <!-- El filtro que a침adimos a continuaci칩n es necesario para identificar que esta ser치 la primera actividad que lanzaremos -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditarAmigosActivity"
            android:label="@string/title_activity_editaramigos"
            android:parentActivityName=".MainActivityTabbed"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.yepwarriors.yepwarriors.MainActivityTabbed" />
        </activity>
        <activity
            android:name=".ActivityRecipients"
            android:label="@string/title_activity_activity_recipients"
            android:parentActivityName=".MainActivityTabbed" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.yepwarriors.yepwarriors.MainActivityTabbed" />
        </activity>
    </application>

</manifest> <!-- decimos quela actividad padre (parent) es LoginActivity -->
