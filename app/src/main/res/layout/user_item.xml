<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/message_inbox_horizontal_margin"
        android:layout_marginRight="@dimen/message_inbox_horizontal_margin"
        android:layout_marginStart="@dimen/message_inbox_horizontal_margin"
        android:layout_marginTop="@dimen/message_inbox_vertical_margin"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/userImageView"
            style="@style/GridImage"
            android:src="@drawable/avatar_empty"
            android:contentDescription="@string/content_desc_user_avatar"/>

        <ImageView
            android:id="@+id/checkImageView"
            style="@style/GridImage"
            android:src="@drawable/avatar_selected"
            android:contentDescription="@string/content_desc_user_checkmark"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/nameLabel"
            android:maxLines="2"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/userImageView"
            />
    </RelativeLayout>
</LinearLayout>
